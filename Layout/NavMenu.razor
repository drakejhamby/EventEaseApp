@using EventEaseApp.Models
@using EventEaseApp.Services
@inject IUserSessionService UserSessionService
@implements IDisposable

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">EventEase</a>
        <div class="navbar-actions">
            @if (currentSession != null)
            {
                <div class="user-info">
                    <span class="user-name">Hello, @currentSession.FullName</span>
                    <button class="btn btn-sm btn-outline-light" @onclick="LogOut">
                        <span class="bi bi-box-arrow-right"></span> Log Out
                    </button>
                </div>
            }
            <ThemeToggle />
            <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
                <span class="navbar-toggler-icon"></span>
            </button>
        </div>
    </div>
</div>

<div class="@NavMenuCssClass nav-scrollable" @onclick="ToggleNavMenu">
    <nav class="nav flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="bi bi-calendar-event" aria-hidden="true"></span> Browse Events
            </NavLink>
        </div>

        @if (currentSession == null)
        {
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="register">
                    <span class="bi bi-person-plus" aria-hidden="true"></span> Register
                </NavLink>
            </div>
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="login">
                    <span class="bi bi-box-arrow-in-right" aria-hidden="true"></span> Sign In
                </NavLink>
            </div>
        }
        else
        {
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="attendance">
                    <span class="bi bi-clipboard-check" aria-hidden="true"></span> My Attendance
                </NavLink>
            </div>
        }
    </nav>
</div>

@code {
    private bool collapseNavMenu = true;
    private UserSession? currentSession;

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    protected override async Task OnInitializedAsync()
    {
        currentSession = await UserSessionService.GetCurrentSessionAsync();
        UserSessionService.OnSessionCreated += OnSessionChanged;
        UserSessionService.OnSessionEnded += OnSessionEnded;
        StateHasChanged();
    }

    private void OnSessionChanged(UserSession session)
    {
        currentSession = session;
        InvokeAsync(StateHasChanged);
    }

    private void OnSessionEnded(string sessionId)
    {
        if (currentSession?.SessionId == sessionId)
        {
            currentSession = null;
            InvokeAsync(StateHasChanged);
        }
    }

    private async Task LogOut()
    {
        if (currentSession != null)
        {
            await UserSessionService.EndSessionAsync(currentSession.SessionId);
        }
    }

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }

    public void Dispose()
    {
        UserSessionService.OnSessionCreated -= OnSessionChanged;
        UserSessionService.OnSessionEnded -= OnSessionEnded;
    }
}